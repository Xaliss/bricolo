# MySql Mike
#   gem install mysql2 (not necessary on OS X Leopard)
development:
  adapter: mysql2
  database: db/development.mysql2
  password:
  pool: 5
  timeout: 5000
  socket: /var/run/mysqld/mysqld.sock
